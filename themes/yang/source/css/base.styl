$blue=#002D72
$red=#DA3248
$white=#FFF
$gray=#eaeaea
$navy=#13294b
$lightblue=#6cace4
$black=#000

html
  background $blue

html,
body
  color $white
  font-family 'Montserrat'
  font-size 24px
  height 100%
  margin 0
  overflow-x hidden
  padding 0
  width 100%

body
  padding 0 20px

p
  line-height 36px

a
  color $red
  text-decoration none

ul
  list-style none
  margin 0
  padding 0

h1
  font-size 68px

.boldLine
  &::after
    content ''
    bottom 70px
    border-bottom 30px solid $red
    display block
    height 30px
    position relative
    right 2%
    width 104%
    z-index -1

#header
  display inline-block
  margin 20px auto
  text-align center
  text-transform uppercase

footer
  color $gray
  font-size 14px
  margin 0 auto
  padding-top 50px
  text-align center

.content
  align-items center
  display flex
  flex-wrap wrap
  flex-direction column
  width 100%

#misinformation
  h3
    font-style italic

  p
    max-width 720px
