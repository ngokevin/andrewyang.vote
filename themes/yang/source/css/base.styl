$blue=#002D72
$red=#DA3248
$redhighlight=#FA4258
$white=#FFF
$gray=#eaeaea
$navy=#13294b
$lightblue=#6cace4
$black=#000

html
  background $navy

html,
body
  color $white
  font-family 'Montserrat'
  font-size 24px
  height 100%
  margin 0
  overflow-x hidden
  padding 0
  width 100%

body
  padding 0 20px

p
  line-height 36px

a
  color $red
  text-decoration none

ul
  list-style none
  margin 0
  padding 0

h1
  font-size 68px

.boldLine
  &::after
    content ''
    bottom 70px
    border-bottom 30px solid $red
    display block
    height 30px
    position relative
    right 2%
    width 104%
    z-index -1

#headerContainer
  align-items center
  display flex
  flex-direction column
  width 100%

#header
  display inline-block
  margin 20px auto
  margin-bottom -30px
  text-align center
  text-transform uppercase

#nav
  display flex
  li
    padding 10px
  a
    color $gray
    transition .1s all
    &:hover
      color $white
      &:after
        border-bottom 12px solid $redhighlight
    &:after
      content ''
      bottom 26px
      border-bottom 12px solid $red
      display block
      height 12px
      position relative
      right 2%
      transition all .1s
      width 104%
      z-index -1

footer
  color $gray
  font-size 14px
  margin 0 auto
  padding-top 50px
  text-align center

.content
  align-items center
  display flex
  flex-direction column
  width 100%

#math
  h3
    font-style italic

  p
    max-width 720px
