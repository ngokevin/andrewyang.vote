desktop() {
  @media (min-width 1024px) {
    {block}
  }
}

media--1200() {
  @media (min-width 1200px) {
    {block}
  }
}

isSearching() {
  [data-is-searching="true"] {
    {block}
  }
}

$blue=#002D70
$red=#DA344B

html
  background $blue

html,
body
  font-family 'Roboto'
  height 100%
  margin 0
  padding 0
  overflow-y hidden
  width 100%

a
  color $red

ul
  list-style none
  margin 0
  padding 0

#background,
#mask
  height 100%
  left 0
  position fixed
  top 0
  width 100%

#background
  background-image url(/assets/hero.jpg)
  background-position 50% 0
  background-size cover
  z-index -2
  +desktop()
    background-position 0 0

#logo
  height 100px
  left 0
  position fixed
  top 0
  width 100px

#app
  display none
  height 100%
  width 100%
  &.loaded
    display block

#searchContainer
  align-items flex-end
  bottom 20px
  display flex
  justify-content center
  left 0
  overflow hidden
  position absolute
  right 0
  margin-bottom 10px
  width 100%
  +desktop()
    margin-bottom 20px
    bottom 30px

#icon
  position relative
  margin-right 10px
  max-height 40px
  +desktop()
    max-height 60px

#search
  -webkit-appearance none
  -webkit-box-shadow none
  background-image url(/assets/inputBg.png)
  border 0
  border-radius 30px 5px 30px 5px
  box-shadow none
  color #111
  font-family 'Roboto'
  font-size 15px
  font-weight 400
  height 35px
  opacity 0.9
  padding 5px 20px 5px 20px
  transition .2s background
  width 280px
  &:hover:not(:focus),
  &:focus
    opacity 1
  +desktop()
    font-size 18px
    height 55px
    width 320px

input::placeholder
  color #777
  font-family 'Roboto'
  font-style italic
  opacity 0.95
  text-transform none

#results
  align-items center
  color #FAFAFA
  display flex
  flex-direction column
  height unquote('calc(100% - 160px)')
  margin-top 5px
  overflow-y auto
  position relative
  +desktop()
    align-items flex-start
    height unquote('calc(100% - 265px)')
    flex-direction row
    overflow-y hidden

.resultCard
  background url(/assets/bg.png) repeat scroll 0% 0%
  box-shadow 1px 1px 1px 0 #222
  border-radius 20px 5px 20px 5px
  display inline-block
  font-size 12px
  padding 15px
  position relative
  margin 10px
  width 70%
  +desktop()
    border-radius 40px 2px 40px 2px
    font-size 18px
    max-height auto
    min-width 320px
    max-width 320px
    padding 20px
    &[data-expanded]
      height 95%

  .resultContainer
    overflow-y scroll

  .images
    img
      margin-bottom  20px
      max-width 100%

  p,
  span
    +desktop()
      font-size 16px
      line-height 26px

  b
    font-family 'Zilla Slab Highlight'
    margin-right 2px;
    text-transform uppercase

  .icon
    font-size 30px
    right -10px
    opacity 0.75
    position absolute
    top -10px
    +desktop()
      font-size 36px
      right -10px

  h2
    color $red
    font-family 'Zilla Slab Highlight'
    font-weight bold
    font-size 20px
    text-transform uppercase
    i
      display inline-block
      margin-right 10px
    +desktop()
      font-size 24px
      min-height 60px
    span
      font-size 20px
      +desktop()
        font-size 24px

  .problem
    +desktop()
      min-height 105px

  .statement
    margin-bottom 25px
    img
      border-radius 50px
      height 32px
      margin-right 10px
      opacity 0.85
      position relative
      top 4px
      width 32px

  .searchHighlight
    color lighten($red, 15%)
    font-weight bold

  .learnMore
    display flex
    justify-content center
    a
      border 0
      color #CCC
      font-family 'Zilla Slab Highlight'
      font-size 12px
      text-decoration none
      +desktop()
        font-size 16px

  .brief
    display inline-block 10px
    margin-bottom 20px

.footer
  bottom 0
  color #FAFAFA
  font-size 9px
  font-style italic
  position absolute
  left 0
  right 0
  text-align center
  opacity 0.75
  margin-left auto
  margin-right auto
  +desktop()
    font-size 15px

.fade-enter-active,
.fade-leave-active
  transition opacity .5s

.fade-enter,
.fade-leave-to
  opacity 0

.header
  h1
    color $blue
    font-family 'Zilla Slab Highlight'
    font-size 40px
    margin 0 auto
    text-align center
    +desktop()
      font-size 50px
      margin 30px auto 10px auto
      width 100%
 .subheader
    color $blue
    display block
    font-size 24px
    font-family 'Zilla Slab Highlight'
    margin 0 auto 5px auto
    text-align center
    +desktop()
      margin 0 auto 20px auto

.subheader.policy
  display none
  +desktop()
    display block

#testimonialContainer
  align-items center
  display flex
  flex-direction column
  height 90%
  overflow-y auto

 .aboutTestimonial
    color #FAFAFA
    font-size 20px
    font-family 'Zilla Slab Highlight'
    margin 0 auto
    text-align center
    max-width 90%
    +desktop()
      max-width 900px

 #testimonials
    margin-top 20px

 .submitTestimonial
    background $red
    box-shadow 1px 1px 2px 1px #222
    border-radius 5px
    color #FAFAFA
    display inline-block
    margin 0 auto
    margin-top 20px
    padding 10px 20px
    text-decoration none

.testimonial
  background url(/assets/bg.png) repeat scroll 0% 0%
  box-shadow 1px 1px 1px 0 #222
  border-radius 20px 5px 20px 5px
  color #FAFAFA
  display inline-block
  font-size 12px
  padding 15px
  position relative
  width 300px
  +desktop()
    border-radius 40px 2px 40px 2px
    font-size 18px
    max-height auto
    min-width 320px
    max-width 320px
    padding 20px

  .testimonialHeading
    align-items flex-start
    display flex

    .testimonialImage
      background-size cover
      border-radius 200px
      margin-right 20px
      height 64px
      width 64px

    .iconImage
      font-size 48px
      margin-right 20px

    .location
      font-style italic
      margin 0

    .voted
      bottom 3px
      font-size 12px
      font-style italic
      margin 0
      position relative

  p,
  span
    font-size 16px
    line-height 26px

  h2
    color $red
    font-family 'Zilla Slab Highlight'
    margin 0
    span
      font-size 26px
      line-height 30px

  b
    font-family 'Zilla Slab Highlight'
    margin-right 2px;
    text-transform uppercase

  .why
    margin-bottom 0
    margin-top 10px

#nav
  display flex
  justify-content center

  a
    border-radius 5px
    color $red
    display inline-block
    font-family 'Zilla Slab Highlight'
    font-size 20px
    margin-right 10px
    text-decoration none
    transition .2s color
    &:hover
      color lighten($red, 20%)

  +desktop()
    flex-direction column
    font-size 24px
    justify-content flex-start
    position absolute
    right 10px
    top 30px

    a
      text-align right
      margin-bottom 5px

  +media--1200
    flex-direction row

    a
      margin-bottom 0
      text-align left
